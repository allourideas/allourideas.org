    "intl-messageformat": "^10.1.3",
    "linkify-html": "^4.1.0",
    "lit": "^2.7.4",
    "lit-flexbox-literals": "0.0.7",
    "lit-google-map": "^1.0.1",
    "lodash-es": "^4.17.21",
    "marked": "^4.2.12",
    "pwa-helpers": "^0.9.1",
    "rollup-plugin-copy": "^3.4.0",
    "sanitize-html": "^2.10.0",
    "share-menu": "^5.0.0-rc.4",
    "twemoji": "^14.0.2",
    "vanilla-colorful": "^0.7.1"
  }
}
