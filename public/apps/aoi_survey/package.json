    "@material/mwc-textarea": "^0.27.0",
    "@material/web": "^1.0.0-pre.9",
    "@picmo/popup-picker": "^5.8.3",
    "@picmo/renderer-twemoji": "^5.8.3",
    "@types/fingerprintjs": "^0.5.28",
    "@vaadin/vaadin-grid": "^23.1.6",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "classnames": "^2.3.1",
